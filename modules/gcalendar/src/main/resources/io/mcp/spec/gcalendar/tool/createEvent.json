{
  "name": "createEvent",
  "description": "Create a new event (Events.insert)",
  "inputSchema": {
    "type": "object",
    "properties": {
      "calendarId": {
        "type": "string",
        "description": "Calendar to insert the event into"
      },
      "summary": {
        "type": "string",
        "description": "Event title"
      },
      "description": {
        "type": "string",
        "description": "Event description"
      },
      "location": {
        "type": "string",
        "description": "Event location"
      },
      "startTime": {
        "type": "string",
        "description": "RFC3339 start datetime"
      },
      "endTime": {
        "type": "string",
        "description": "RFC3339 end datetime"
      },
      "timeZone": {
        "type": "string",
        "description": "IANA timezone (e.g., America/Los_Angeles)"
      }
    },
    "required": ["calendarId", "summary", "startTime", "endTime"]
  }
}
